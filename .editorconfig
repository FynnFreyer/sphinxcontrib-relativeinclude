root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 120

[Makefile]
indent_style = tab

[*.md]
# allow forcing line breaks with trailing spaces
trim_trailing_whitespace = false
# one line one sentence, no line breaks in between
max_line_length = 999999999

[{*.yml, *.yaml, *.puml, *.json, *.sh, *.bash}]
indent_size = 2
